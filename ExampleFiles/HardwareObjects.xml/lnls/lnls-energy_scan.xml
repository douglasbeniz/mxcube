<equipment class="LNLSEnergyScan">
  <!-- Related devices and objects -->
  <device hwrid="/lnls/lnls-beam_info" role="beam_info"/>
  <device hwrid="/lnls/lnls-energy" role="energy"/>
  <!-- <device hwrid="/attenuators" role="transmission"/> -->
  <!-- <device hwrid="/dbconnection" role="dbserver"/> -->

  <!-- Specific properties -->
  <!-- Used by Py4Syn library :: real = MX2:SCALER, channel 2 -->
  <epics_scaler>MXROB:SCALER</epics_scaler>
  <epics_scaler_channel>2</epics_scaler_channel>
  <epics_scaler_name>mxrobScaler</epics_scaler_name>

  <!-- Energies in eV; this is because there are two different steps during scan -->
  <internal_energy_limits>15.0</internal_energy_limits>
  <external_energy_limits>50.0</external_energy_limits>
  <!-- Steps in eV -->
  <internal_step_scan>0.2</internal_step_scan>
  <external_step_scan>1.0</external_step_scan>

  <!-- Supported elements to perform energy scan -->
  <elements>
    <element>
      <symbol>V</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Cr</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Mn</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Fe</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Co</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Ni</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Cu</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Zn</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Ga</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Ge</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>As</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Se</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Br</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Kr</symbol>
      <energy>K</energy>
    </element>
    <element>
      <symbol>Rb</symbol>
      <energy>K</energy>
    </element>
  </elements>

  <!-- Default energies for MAD -->
  <mad>
    <defaultenergy>
      <energy>12.65950</energy>
      <directory>pk</directory>
    </defaultenergy>
    <defaultenergy>
      <energy>12.65950</energy>
      <directory>ip</directory>
    </defaultenergy>
    <defaultenergy>
      <energy>12.70800</energy>
      <directory>rm</directory>
    </defaultenergy>
  </mad>
</equipment>
